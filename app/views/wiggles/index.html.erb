<%- model_class = Wiggle -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @wiggles.each do |wiggle| %>
      <tr>
        <td><%= link_to wiggle.id, wiggle_path(wiggle) %></td>
        <td><%= wiggle.name %></td>
        <td class="wiggle-actions">
          <div class="btn-group">
            <%=raw action_buttons(wiggle) %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @wiggles, :theme => 'twitter-bootstrap', :pagination_class => "pagination-small pagination-centered" %>
